<!DOCTYPE html>
<html lang="ja">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Daily News Dashboard</title>
<style>
*, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }

:root {
  --bg: #0a0a0f;
  --surface: rgba(255,255,255,0.05);
  --surface-hover: rgba(255,255,255,0.08);
  --border: rgba(255,255,255,0.08);
  --highlight: rgba(255,255,255,0.12);
  --text: #e4e4e7;
  --text-muted: #a1a1aa;
  --text-dim: #71717a;
  --sidebar-width: 260px;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Hiragino Sans",
               "Noto Sans JP", sans-serif;
  background: var(--bg);
  color: var(--text);
  min-height: 100vh;
  overflow-x: hidden;
}

/* Ambient glow blobs */
.blob {
  position: fixed;
  border-radius: 50%;
  filter: blur(120px);
  opacity: 0.18;
  pointer-events: none;
  z-index: 0;
}
.blob--purple { width: 600px; height: 600px; background: #8b5cf6; top: -200px; left: -100px; }
.blob--pink   { width: 500px; height: 500px; background: #ec4899; bottom: -150px; right: -100px; }

/* Header */
.header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(10,10,15,0.8);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid var(--border);
  padding: 16px 24px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.header h1 {
  font-size: 20px;
  font-weight: 700;
  letter-spacing: -0.02em;
}
.header .updated {
  font-size: 13px;
  color: var(--text-dim);
}

/* Tabs */
.tabs {
  display: flex;
  gap: 4px;
  padding: 12px 24px 0;
  border-bottom: 1px solid var(--border);
  background: rgba(10,10,15,0.6);
  position: sticky;
  top: 53px;
  z-index: 99;
}
.tab {
  padding: 10px 20px;
  font-size: 14px;
  font-weight: 500;
  color: var(--text-muted);
  cursor: pointer;
  border-bottom: 2px solid transparent;
  transition: color 0.2s, border-color 0.2s;
  background: none;
  border-top: none;
  border-left: none;
  border-right: none;
}
.tab.active {
  color: var(--text);
  border-bottom-color: #8b5cf6;
}

/* Layout */
.layout {
  display: flex;
  min-height: calc(100vh - 110px);
  position: relative;
  z-index: 1;
}

/* Sidebar */
.sidebar {
  width: var(--sidebar-width);
  min-width: var(--sidebar-width);
  padding: 20px 12px;
  border-right: 1px solid var(--border);
  background: rgba(10,10,15,0.5);
  backdrop-filter: blur(10px);
}
.sidebar-label {
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  color: var(--text-dim);
  padding: 0 12px 8px;
}
.nav-item {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px 12px;
  border-radius: 8px;
  cursor: pointer;
  transition: background 0.15s;
  font-size: 14px;
  color: var(--text-muted);
  border: none;
  background: none;
  width: 100%;
  text-align: left;
}
.nav-item:hover { background: var(--surface-hover); }
.nav-item.active { background: var(--surface); color: var(--text); }
.nav-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  flex-shrink: 0;
}
.nav-badge {
  margin-left: auto;
  font-size: 12px;
  color: var(--text-dim);
  background: var(--surface);
  padding: 2px 8px;
  border-radius: 10px;
}

/* Main content */
.main {
  flex: 1;
  padding: 24px 32px;
  max-width: 960px;
}
.category-section { display: none; }
.category-section.visible { display: block; }
.site-card {
  background: var(--surface);
  backdrop-filter: blur(20px);
  border: 1px solid var(--border);
  border-radius: 12px;
  margin-bottom: 20px;
  overflow: hidden;
  position: relative;
}
.site-card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: var(--highlight);
}
.site-card-header {
  padding: 16px 20px;
  font-size: 15px;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8px;
  border-bottom: 1px solid var(--border);
}
.site-card-header .cat-dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  flex-shrink: 0;
}
.article-list { list-style: none; }
.article-item {
  border-bottom: 1px solid var(--border);
}
.article-item:last-child { border-bottom: none; }
.article-item a {
  display: block;
  padding: 12px 20px;
  color: var(--text);
  text-decoration: none;
  font-size: 14px;
  line-height: 1.6;
  transition: background 0.15s;
}
.article-item a:hover {
  background: var(--surface-hover);
}

/* Mobile: sidebar becomes horizontal scrolling tabs */
@media (max-width: 768px) {
  .layout { flex-direction: column; }
  .sidebar {
    width: 100%;
    min-width: unset;
    border-right: none;
    border-bottom: 1px solid var(--border);
    padding: 12px;
    display: flex;
    gap: 8px;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }
  .sidebar-label { display: none; }
  .nav-item {
    flex-shrink: 0;
    padding: 8px 16px;
    white-space: nowrap;
    font-size: 13px;
  }
  .nav-badge { display: none; }
  .main {
    padding: 16px;
    max-width: 100%;
  }
  .site-card-header { padding: 12px 16px; font-size: 14px; }
  .article-item a { padding: 10px 16px; font-size: 13px; }
  .header { padding: 12px 16px; }
  .header h1 { font-size: 17px; }
  .tabs { padding: 8px 16px 0; top: 49px; }
}
</style>
</head>
<body>
<div class="blob blob--purple"></div>
<div class="blob blob--pink"></div>

<header class="header">
  <h1>Daily News Dashboard</h1>
  <span class="updated">{{ updated_at }}</span>
</header>

<nav class="tabs">
  <button class="tab active">Today's News</button>
</nav>

<div class="layout">
  <aside class="sidebar">
    <div class="sidebar-label">Categories</div>
    <button class="nav-item active" data-category="all">
      <span class="nav-dot" style="background: #fff;"></span>
      ALL
      <span class="nav-badge">{% set total_all = [] %}{% for key, data in category_data.items() %}{% if total_all.append(data.total) %}{% endif %}{% endfor %}{{ total_all | sum }}</span>
    </button>
    {% for key, info in categories.items() %}
    <button class="nav-item" data-category="{{ key }}">
      <span class="nav-dot" style="background: {{ info.color }};"></span>
      {{ info.label }}
      <span class="nav-badge">{{ category_data[key].total }}</span>
    </button>
    {% endfor %}
  </aside>

  <main class="main">
    {% for cat_key, data in category_data.items() %}
    <div class="category-section" data-cat="{{ cat_key }}">
      {% for site in data.sites %}
      <div class="site-card">
        <div class="site-card-header">
          <span class="cat-dot" style="background: {{ data.color }};"></span>
          {{ site.name }}
        </div>
        <ul class="article-list">
          {% for item in site["items"] %}
          <li class="article-item">
            <a href="{{ item.link }}" target="_blank" rel="noopener">{{ item.title }}</a>
          </li>
          {% endfor %}
        </ul>
      </div>
      {% endfor %}
    </div>
    {% endfor %}
  </main>
</div>

<script>
(function() {
  var navItems = document.querySelectorAll('.nav-item');
  var sections = document.querySelectorAll('.category-section');

  function show(category) {
    navItems.forEach(function(btn) {
      btn.classList.toggle('active', btn.getAttribute('data-category') === category);
    });
    sections.forEach(function(sec) {
      if (category === 'all') {
        sec.classList.add('visible');
      } else {
        sec.classList.toggle('visible', sec.getAttribute('data-cat') === category);
      }
    });
  }

  navItems.forEach(function(btn) {
    btn.addEventListener('click', function() {
      show(this.getAttribute('data-category'));
    });
  });

  // Default: show all
  show('all');
})();
</script>
</body>
</html>
